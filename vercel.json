{
  "version": 2,
  "builds": [
    { "src": "/frontend/**", "use": "@vercel/static" },
    { "src": "/backend/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "PORT": 3000
  }
}
